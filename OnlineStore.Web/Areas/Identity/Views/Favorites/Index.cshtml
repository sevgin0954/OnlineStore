@model IEnumerable<FavoriteProductViewModel>
@{
    ViewData["Title"] = "Fovorites";
}

<div class="account-container">
    <div class="account-content d-flex flex-column">
        @if (Model.Count() == 0)
        {
            <div class="mx-auto">
                <h2>No favorites products found</h2>
            </div>
        }
        @foreach (var product in Model)
        {
            <div class="account-content-inner d-flex flex-row">
                <div class="flex-column">
                    <img class="profile-image" src="data:image/jpg;base64,@System.Convert.ToBase64String(@product.MainPhoto)" />
                </div>
                <div class="flex-column">
                    <h3>@product.Name</h3>
                </div>
                <div class="ml-auto flex-column">
                    <div>Price: </div>
                    <div id="price">@product.Price.ToString("F")</div>
                    <form asp-controller="Favorites" asp-action="RemoveProduct" asp-route-productId="@product.Id" method="post">
                        <button class="btn-custom-border-red btn" type="submit">Remove</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

