@model IEnumerable<OrderBindingModel.DeliveryInfoBindingModel>
@{
    ViewData["Title"] = "Choose Address";
}

<div class="account-container">
    <div class="account-content">
        <div class="account-content-inner">
            <ul class="list-group list-group-flush">
                @if (Model.Count() == 0)
                {
                    <li class="list-group-item text-center">
                        <a asp-controller="DeliveryInfo" asp-action="Add" class="btn btn-custom-border-blue">add first address</a>
                    </li>
                }
                else
                {
                    foreach (var deliveryinfo in Model)
                    {
                        <li class="list-group-item">
                            <div class="d-flex">
                                <div>
                                    <b>@deliveryinfo.FullName - @deliveryinfo.PhoneNumber</b> <br />
                                    @deliveryinfo.Address <br />
                                    @deliveryinfo.SelectedDistrictName - @deliveryinfo.SelectedPopulatedName
                                </div>

                                <div class="ml-auto row">
                                    <form asp-action="ChooseAddress" asp-route-deliveryInfoId="@deliveryinfo.Id" method="post">
                                        <button class="btn btn-custom-border-green" type="submit">Choose</button>
                                    </form>
                                </div>
                            </div>
                        </li>
                    }

                    <li class="list-group-item">
                        <a asp-controller="DeliveryInfo" asp-action="Add" class="btn btn-custom-border-blue">add new address</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

