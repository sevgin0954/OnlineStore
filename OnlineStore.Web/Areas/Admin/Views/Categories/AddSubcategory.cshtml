@model SubCategoryCategoryBindingModel
@{
    ViewData["Title"] = $"Add subcategory for {Model.CategoryName} category";
}

<h3>Add subcategory</h3>
<form asp-controller="Categories" asp-action="AddSubcategory" method="post">
    <div class="form-group">
        <input asp-for="CategoryId" hidden />
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group d-flex">
        <div class="mx-auto">
            <button class="btn btn-custom-border-blue" type="submit">Submit</button>
            <a asp-controller="Categories" asp-action="Index" class="btn btn-custom-border-red">Cancel</a>
        </div>
    </div>
</form>

