@model OnlineStore.Models.WebModels.Admin.BindingModels.ProductBindingModel
<form method="post" enctype="multipart/form-data">
    <input asp-for="SubCategoryId" hidden />
    <input asp-for="ProductId" hidden />
    <div class="row">
        <div class="col">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="col">
            <label asp-for="CountsLeft"></label>
            <input class="form-control" asp-for="CountsLeft" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="Price"></label>
            <input class="form-control" asp-for="Price" />
        </div>
        <div class="col">
            <label asp-for="PromoPrice"></label>
            <input class="form-control" asp-for="PromoPrice" placeholder="0.00" />
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="Description"></label>
            <textarea class="form-control" asp-for="Description" rows="15"></textarea>
        </div>
        <div class="col">
            <label asp-for="Specifications"></label>
            <textarea class="form-control" asp-for="Specifications" rows="15"></textarea>
        </div>
    </div>
    <div class="row">
        <label asp-for="Photos"></label>
        <input class="form-control-file" asp-for="Photos" />
    </div>

    <div class="form-group d-flex">
        <div class="mx-auto">
            <button class="btn btn-custom-border-blue" type="submit">Submit</button>
            <a asp-controller="Categories" asp-action="Index" class="btn btn-custom-border-red">Cancel</a>
        </div>
    </div>
</form>